<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Styles -->
    <link rel="stylesheet" href="/static/css/main.css">
    <script src="/static/js/fontawsome-all.js" defer></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Moment + Jalaali -->
    <script src="/static/js/moment.min.js"></script>
    <script src="/static/js/moment-jalaali.js"></script>
    <script>
      // Initialize moment with Persian/Jalaali calendar support
      if (window.moment) {
        console.log('Moment loaded. Testing Jalaali...');
        
        // Load Persian locale if available
        if (moment.loadPersian) {
          moment.loadPersian();
          console.log('Persian locale loaded');
        } 
        
        // Test current date
        const now = moment();
        console.log('Current Gregorian date:', now.format('YYYY-MM-DD'));
        
        if (typeof now.jYear === 'function') {
          console.log('Current Jalaali date:', now.jYear(), now.jMonth() + 1, now.jDate());
          console.log('Moment Jalaali loaded successfully');
        } else {
          console.error('Moment Jalaali methods not available');
        }
      } else {
        console.error('Moment not loaded');
      }
    </script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <i class="fas fa-calendar-alt"></i>
                    تقویم شمسی
                </div>
                
                <div class="header-actions">
                    <!-- Theme Toggle -->
                    <label class="theme-switch">
                        <input type="checkbox" id="themeToggle">
                        <span class="theme-slider"></span>
                    </label>
                    
                    <!-- User Menu -->
                    <div class="user-menu">
                        <button class="btn btn-outline btn-sm" onclick="toggleUserDropdown()">
                            <i class="fas fa-user"></i>
                            <%= user.firstName || user.username %>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        
                        <div class="user-dropdown" id="userDropdown">
                            <a href="#" onclick="showProfile()">
                                <i class="fas fa-user-edit"></i>
                                پروفایل
                            </a>
                            <a href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt"></i>
                                خروج
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Calendar Controls -->
            <div class="calendar-controls">
                <div class="calendar-nav">
                    <button class="btn btn-outline" onclick="previousPeriod()">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    
                    <div class="calendar-title">
                        <h2 id="calendarTitle">آبان ۱۴۰۲</h2>
                        <button class="btn btn-sm btn-outline" onclick="goToToday()">امروز</button>
                    </div>
                    
                    <button class="btn btn-outline" onclick="nextPeriod()">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                </div>
                
                <div class="view-toggles">
                    <button class="btn btn-sm view-btn active" data-view="month" onclick="changeView('month')">
                        <i class="fas fa-calendar"></i>
                        ماهانه
                    </button>
                    <button class="btn btn-sm view-btn" data-view="week" onclick="changeView('week')">
                        <i class="fas fa-calendar-week"></i>
                        هفتگی
                    </button>
                    <button class="btn btn-sm view-btn" data-view="day" onclick="changeView('day')">
                        <i class="fas fa-calendar-day"></i>
                        روزانه
                    </button>
                </div>
            </div>

            <div class="calendar-container">
                <!-- Calendar Grid -->
                <div class="calendar-wrapper">
                    <div id="calendarGrid" class="calendar-grid">
                        <!-- Calendar will be generated here -->
                    </div>
                </div>

                <!-- Task Panel -->
                <div class="task-panel">
                    <div class="task-panel-header">
                        <h3>تسک‌های <span id="selectedDateTitle">امروز</span></h3>
                        <button class="btn btn-primary btn-sm" onclick="showAddTaskModal()">
                            <i class="fas fa-plus"></i>
                            افزودن تسک
                        </button>
                    </div>
                    
                    <div class="task-list" id="taskList">
                        <div class="no-tasks">
                            <i class="fas fa-tasks"></i>
                            <p>هیچ تسکی برای این روز وجود ندارد</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Task Modal -->
    <div class="modal" id="addTaskModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>افزودن تسک جدید</h3>
                <button class="modal-close" onclick="closeModal('addTaskModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <form id="addTaskForm" class="modal-body">
                <div class="form-group">
                    <label for="taskTitle" class="form-label">عنوان تسک</label>
                    <input type="text" id="taskTitle" name="title" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="taskDescription" class="form-label">توضیحات</label>
                    <textarea id="taskDescription" name="description" class="form-input" rows="3"></textarea>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskDate" class="form-label">تاریخ</label>
                        <input type="text" id="taskDate" name="date" class="form-input" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label for="taskPriority" class="form-label">اولویت</label>
                        <select id="taskPriority" name="priority" class="form-select">
                            <option value="LOW">کم</option>
                            <option value="MEDIUM" selected>متوسط</option>
                            <option value="HIGH">زیاد</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskStartTime" class="form-label">زمان شروع</label>
                        <input type="time" id="taskStartTime" name="startTime" class="form-input">
                    </div>
                    
                    <div class="form-group">
                        <label for="taskEndTime" class="form-label">زمان پایان</label>
                        <input type="time" id="taskEndTime" name="endTime" class="form-input">
                    </div>
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-outline" onclick="closeModal('addTaskModal')">انصراف</button>
                    <button type="submit" class="btn btn-primary">ایجاد تسک</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Task Modal -->
    <div class="modal" id="editTaskModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>ویرایش تسک</h3>
                <button class="modal-close" onclick="closeModal('editTaskModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <form id="editTaskForm" class="modal-body">
                <input type="hidden" id="editTaskId" name="id">
                
                <div class="form-group">
                    <label for="editTaskTitle" class="form-label">عنوان تسک</label>
                    <input type="text" id="editTaskTitle" name="title" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="editTaskDescription" class="form-label">توضیحات</label>
                    <textarea id="editTaskDescription" name="description" class="form-input" rows="3"></textarea>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="editTaskDate" class="form-label">تاریخ</label>
                        <input type="text" id="editTaskDate" name="date" class="form-input" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label for="editTaskPriority" class="form-label">اولویت</label>
                        <select id="editTaskPriority" name="priority" class="form-select">
                            <option value="LOW">کم</option>
                            <option value="MEDIUM">متوسط</option>
                            <option value="HIGH">زیاد</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="editTaskStartTime" class="form-label">زمان شروع</label>
                        <input type="time" id="editTaskStartTime" name="startTime" class="form-input">
                    </div>
                    
                    <div class="form-group">
                        <label for="editTaskEndTime" class="form-label">زمان پایان</label>
                        <input type="time" id="editTaskEndTime" name="endTime" class="form-input">
                    </div>
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-outline" onclick="closeModal('editTaskModal')">انصراف</button>
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        /* Calendar specific styles */
        .main-content {
            padding: 2rem 0;
            min-height: calc(100vh - 80px);
        }

        .calendar-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background: var(--bg-card);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow);
        }

        .calendar-nav {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .calendar-title {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .calendar-title h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin: 0;
        }

        .view-toggles {
            display: flex;
            gap: 0.5rem;
        }

        .view-btn.active {
            background-color: var(--primary-600);
            color: white;
        }

        .calendar-container {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 2rem;
            height: calc(100vh - 200px);
        }

        .calendar-wrapper {
            background: var(--bg-card);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            overflow: auto;
        }

        .calendar-grid {
            display: grid;
            gap: 1px;
            background: var(--border-color);
        }

        .calendar-grid.month-view {
            grid-template-columns: repeat(7, 1fr);
            grid-template-rows: auto repeat(6, 1fr);
        }

        .calendar-grid.week-view {
            grid-template-columns: repeat(7, 1fr);
            grid-template-rows: auto 1fr;
        }

        .calendar-grid.day-view {
            grid-template-columns: 1fr;
            grid-template-rows: auto 1fr;
        }

        .calendar-header {
            background: var(--primary-50);
            color: var(--primary-700);
            padding: 1rem;
            text-align: center;
            font-weight: bold;
        }

        [data-theme="dark"] .calendar-header {
            background: var(--primary-900);
            color: var(--primary-200);
        }

        .calendar-day {
            background: var(--bg-card);
            padding: 0.75rem;
            min-height: 100px;
            border: 1px solid var(--border-color);
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
        }

        .calendar-day:hover {
            background: var(--primary-50);
        }

        [data-theme="dark"] .calendar-day:hover {
            background: var(--primary-900);
        }

        .calendar-day.selected {
            background: var(--primary-100);
            border-color: var(--primary-500);
        }

        [data-theme="dark"] .calendar-day.selected {
            background: var(--primary-800);
        }

        .calendar-day.other-month {
            color: var(--text-secondary);
            background: var(--gray-50);
        }

        [data-theme="dark"] .calendar-day.other-month {
            background: var(--gray-900);
        }

        .calendar-day.today {
            background: var(--primary-500);
            color: white;
        }

        .day-number {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .day-tasks {
            font-size: 0.75rem;
        }

        .task-indicator {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-left: 2px;
        }

        .task-indicator.priority-low {
            background-color: var(--success-500);
        }

        .task-indicator.priority-medium {
            background-color: var(--warning-500);
        }

        .task-indicator.priority-high {
            background-color: var(--danger-500);
        }

        /* Task Panel */
        .task-panel {
            background: var(--bg-card);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .task-panel-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .task-list {
            flex: 1;
            padding: 1rem;
            overflow-y: auto;
        }

        .task-item {
            background: var(--bg-secondary);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            border-left: 4px solid var(--gray-300);
            transition: all 0.2s ease;
        }

        .task-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .task-item.priority-low {
            border-left-color: var(--success-500);
        }

        .task-item.priority-medium {
            border-left-color: var(--warning-500);
        }

        .task-item.priority-high {
            border-left-color: var(--danger-500);
        }

        .task-item.completed {
            opacity: 0.6;
        }

        .task-item.completed .task-title {
            text-decoration: line-through;
        }

        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

        .task-title {
            font-weight: 600;
            color: var(--text-primary);
        }

        .task-actions {
            display: flex;
            gap: 0.25rem;
        }

        .task-action-btn {
            background: none;
            border: none;
            padding: 0.25rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .task-action-btn:hover {
            background: var(--bg-card);
        }

        .task-meta {
            font-size: 0.875rem;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .task-description {
            margin-top: 0.5rem;
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .no-tasks {
            text-align: center;
            color: var(--text-secondary);
            padding: 3rem 1rem;
        }

        .no-tasks i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* User Menu */
        .user-menu {
            position: relative;
        }

        .user-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            box-shadow: var(--shadow-lg);
            min-width: 150px;
            z-index: 1000;
            display: none;
        }

        .user-dropdown a {
            display: block;
            padding: 0.75rem 1rem;
            color: var(--text-primary);
            text-decoration: none;
            transition: background-color 0.2s ease;
        }

        .user-dropdown a:hover {
            background: var(--bg-secondary);
        }

        .user-dropdown a i {
            margin-left: 0.5rem;
            width: 16px;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 10000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: var(--bg-card);
            border-radius: 12px;
            width: 90%;
            max-width: 500px;
            max-height: 90vh;
            overflow-y: auto;
            animation: modalSlideIn 0.3s ease;
        }

        .modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-secondary);
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .calendar-container {
                grid-template-columns: 1fr;
                height: auto;
            }
            
            .task-panel {
                max-height: 400px;
            }
        }

        @media (max-width: 768px) {
            .calendar-controls {
                flex-direction: column;
                gap: 1rem;
            }
            
            .calendar-nav {
                order: 2;
            }
            
            .view-toggles {
                order: 1;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <!-- JavaScript -->
    <script src="/static/js/calendar.js"></script>
</body>
</html>
